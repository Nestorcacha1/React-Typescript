---
import Section from "./Section.astro";
import { skills } from "@/cv_portafolio.json";
---

<Section title="Lenguajes">
  <ul>
    {
      skills.map(({ name }) => {
        return (
          <li>
            <span> {name}</span>
          </li>
        );
      })
    }
  </ul>
</Section>

<style>
  ul {
    display: inline-flex;
    gap: 8px;
    flex-wrap: wrap;
  }
  li {
    border-radius: 6px;
    background: rgb(152, 145, 145);
    color: black;
    font-size: 0.8rem;
    font-weight: 500;
    padding: 0.2rem 0.6rem;
  }
</style>
