---
import Section from "../Section.astro";
import { work } from "@/cv_portafolio.json";
---

<Section title="Experiencia">
  <ul>
    {
      work.map(({ name, startDate, endDate, position, summary }) => {
        const startYear = new Date(startDate).getFullYear();
        const endYear =
          endDate !== null ? new Date(endDate).getFullYear() : "Acutal";
        const Year = `${startYear} - ${endYear}`;
        return (
          <li>
            <article>
              <header>
                <div>
                  <h3>{name}</h3>
                  <h4>{position}</h4>
                </div>
                <time>{Year}</time>
              </header>
              <footer>
                <p>{summary}</p>
              </footer>
            </article>
          </li>
        );
      })
    }
  </ul>
</Section>

<style>
  ul {
    display: flex;
    flex-direction: column;
    gap: 32px;
  }
  article h3 {
    font-weight: 700;
    color: black;
  }
  article h4 {
    font-weight: 400;
    color: #666;
  }
  header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    gap: 4;
  }
  time {
    font-size: 0.85rem;
    color: #666;
  }
</style>
