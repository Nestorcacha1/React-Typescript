---
import Section from "../Section.astro";
import { education } from "@/cv_portafolio.json";
---

<Section title="Education">
  <ul>
    {
      education.map(({ institution, area, startDate, endDate }) => {
        const endDateinfo =
          endDate != null ? new Date(endDate).getFullYear() : "Actual";
        const startDateinfo = new Date(startDate).getFullYear();
        const year = `${startDateinfo} - ${endDateinfo}`;
        return (
          <li>
            <article>
              <header>
                <div>
                  <h3>{institution}</h3>
                </div>

                <time>{year}</time>
              </header>

              <footer>
                <p>{area}</p>
              </footer>
            </article>
          </li>
        );
      })
    }
  </ul>
</Section>

<style>
  ul {
    display: flex;
    flex-direction: column;
    gap: 32px;
  }

  article h3 {
    font-weight: 500;
    color: #111;
  }

  header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 4px;
  }

  time {
    color: #555;
    font-size: 0.85rem;
  }
</style>
